<h3>Iniciar sessão</h3>
<hr>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div>
    <%= f.email_field :email, autofocus: true, :placeholder => "Nome de utilizador" %>
  </div>

  <div>
    <br>
    <%= f.password_field :password, autocomplete: "off", :placeholder => "Palavra-passe" %>
  </div>

  <% if devise_mapping.rememberable? -%>
      <%= f.check_box :remember_me %> <strong>Manter sessão iniciada</strong>
  <% end -%>

  <div>
    <br>
    <%= f.submit "Sign in", :class => "btn btn-default" %>
  </div>
<% end %>